  font-size: 32rpx;
  font-family:'Microsoft YaHei';
  color:#555;
}

.ubom10 {
  clear: both;
  height: 10rpx;
}

/*top image*/
.topthumb {
  width:100%;
  height:390rpx;
}

.topthumb image {
  width:100%;
  height:390rpx;
}
