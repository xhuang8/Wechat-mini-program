/*courses details title*/
.inner {
  width: 96%;
  margin: 30rpx auto;
}

.utitle {
  clear: both;
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
}

.utitle text {
  width: 100%;
  padding-left: 20rpx;
  text-align: center;
  font-size: 36rpx;
}

.liy {
  width: 3px;
  height: 36rpx;
  display: inline-block;
  background-color: #000;
}
