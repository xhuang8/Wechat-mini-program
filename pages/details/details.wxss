/*course details*/
.tltitle {
  padding-left: 20rpx;
  margin: 10rpx auto;
}

.tltarea {
  height: 80rpx;
  line-height: 80rpx;
  text-indent: 10rpx;
  font-size: 35rpx;
  font-weight: bold;
}

.lid {
  width: 20rpx;
  height: 20rpx;
  display: inline-block;
  background-color: #000;
  margin-right: 20rpx;
}

