/**index.wxss**/
.main {
  font-size: 32rpx;
  font-family: Arial, Helvetica, sans-serif;
  color: #555;
}

.container {
  background-color: #F2f2f2;
}

view, navigator{
  box-sizing: border-box;
}

view {
  display: block;
}

/*Carousel 轮播图设置*/
.swiper {
  height: 400rpx;
  width: 100%;
}
.swiper image {
  height: 100%;
  width: 100%;
}
/*Carousel 轮播图设置*/

/*sort 分类*/
.unav {
  background-color: #fff;
  height: 200rpx;
  padding: 20rpx 0;
}

.navlist {
  float: left;
  width: 25%;
  margin: auto;
  text-align: center;
}

.navthumb {
  width: 100%;
  height: 100rpx;
  margin: 20rpx auto;
}

.navthumb image {
  width: 100rpx;
  height: 100rpx;
}

.navname {
  text-align: center;
  height: 30rpx;
  line-height: 30rpx;
}
/*sort 分类*/

/*最新事件 title*/
.utitle {
  width: 100%;
  height: 90rpx;
  text-align: center;
  background: #fff;
}

.mtitle {
  font-size: 45rpx;
  font-weight: bold;
  color:#000;
}

.ztitle {
  font-size: 25rpx;
  color:#999;
}
/*最新事件 title*/

/*中间分割线*/
.ubom {
  height:30rpx;
  background:#eee;
}

.ubom10 {
  clear:both;
  height:10rpx;
}
/*中间分割线*/

/*events 最新事件*/
.noticeList {
  padding: 0 16rpx;
}

.noticeList-item {
  padding: 24rpx 6rpx 16rpx;
  border-bottom: 1px solid #f3f3f3;
  display: -webkit-box;
	display: -webkit-flex;
  display: flex;
} 

.noticeList-item-r {
  padding-left: 8px;
  -webkit-box-flex: 1;
	-webkit-flex: 1;
	flex:1;
  overflow: hidden;
}

.noticeList-item-r text{
  display: block;
}

.noticeList-item-title{
  overflow: hidden;
  white-space: pre-wrap;
  text-overflow: ellipsis;
  font-weight: bold;
  color: #13227a;
  font-size:28rpx;
}

.noticeList-item-desc{
  overflow: hidden;
  word-break: break-all;
  text-overflow: ellipsis;
  text-overflow: -o-ellipsis-lastline;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  color: #999;
  line-height: 1.3;
  margin-top: 5px;
  height: 50px;
  font-size:26rpx;
}
/*events 最新事件*/

