/* pages/articles/articles.wxss */

page{
  background-color: #fff;
}

.container-group {
  margin: 5px 2px 15% 2px;
}

.detail-container {
  display: flex;
  flex-direction: column;
  padding: 6px;
  margin-bottom: 80rpx;
}

.news-title {
  font-size: 45rpx;
  letter-spacing: 3px;
  line-height: 30px;
  font-weight: bold;
  margin-bottom: 8px;
  color: #13227a;
}

.news-time {
  font-size: 25rpx;
  color: #999;
}

.news-autor {
  margin-left: 20rpx;
  font-size: 25rpx;
  color: #999;
}

.news-image {
  width: 100%;
  height: 800rpx;
  margin: 18px 0;
}

.news-content {
  letter-spacing: 2px;
  line-height: 15px;
  font-size: 28rpx;
  color: #7b7b7b;
}

.ubom {
  height: 15rpx;
  background-color:white;
}